<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <div>Ŝarĝigas...</div>
                </Authorizing>
                <NotAuthorized>
                    <h1>Pardonu</h1>
                    <p>Vi ne rajtas atingi tiun ĉi paĝon. Bonvolu ensaluti.</p>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Estas nenio ĉi tie.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>