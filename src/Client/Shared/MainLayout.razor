@inherits LayoutComponentBase

@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication


<MudBreakpointProvider>
    <MudLayout>
        <MudAppBar Elevation="1" Color=Color.Primary>
            <MudLink Typo="Typo.h5" Class="ml-3" Underline="Underline.None" Href="/serĉi/vorto" Color=Color.Inherit>
                <MudHidden Breakpoint=Breakpoint.MdAndUp Invert=true>Universala Vortaro Demokratia</MudHidden>
                <MudHidden Breakpoint=Breakpoint.MdAndUp>UVD</MudHidden>
            </MudLink>
            <MudSpacer />
            @if(lingvoj is not null)
            {
                <MudHidden Breakpoint=Breakpoint.MdAndUp Invert=true>
                    <MudMenu StartIcon="@Icons.Filled.Translate" EndIcon="@Icons.Filled.KeyboardArrowDown" Label=@(prepariLingvon(lingvoj[Lingvo].Nomo)) Color="Color.Inherit" Variant="Variant.Text">
                        @foreach (var l in lingvoj.OrderBy(ling=>ling.Value.Nomo.Replace("La ",string.Empty)))
                        {
                            <MudMenuItem OnClick=@(e => ŜanĝiLingvon(l.Key))>@l.Value.Nomo</MudMenuItem>
                        }
                    </MudMenu>
                </MudHidden>
            }
            <AuthorizeView>
                <Authorized>
                    <MudHidden Breakpoint=Breakpoint.MdAndUp Invert=true>
                        <MudButton Color="Color.Inherit" Variant="Variant.Text" Href="/krei">Aldoni</MudButton>
                    </MudHidden>
                    <MudHidden Breakpoint=Breakpoint.MdAndUp>
                        <MudIconButton Icon=@Icons.Filled.Add Color="Color.Inherit" Variant="Variant.Text" Href="/krei"/>
                    </MudHidden>
                    
                </Authorized>
            </AuthorizeView>
            <MudButton Color=Color.Inherit Variant="Variant.Text" Href="https://github.com/jdaless/Vortaro">pri</MudButton>
            <AccessControl/>
            <MudToggleIconButton 
                @bind-Toggled=malhela
                Color=Color.Inherit 
                Icon=@Icons.Filled.DarkMode 
                Title="malheligu" 
                ToggledColor=Color.Inherit
                ToggledIcon=@Icons.Filled.LightMode 
                ToggledTitle="heligu"/>
        </MudAppBar>
        <MudMainContent>
            <CascadingValue Value=Lingvo>
                @Body
            </CascadingValue>
        </MudMainContent>
    </MudLayout>

    
    <MudHidden Breakpoint=Breakpoint.MdAndUp>
        <MudMenu >
            <ActivatorContent>
                <MudFab StartIcon=@Icons.Filled.Translate Class="z-30 ma-4" Style=" object-position: right bottom; position: fixed; bottom: 0%" />
            </ActivatorContent>
            <ChildContent>
                @foreach (var l in lingvoj!.OrderBy(ling=>ling.Value.Nomo.Replace("La ",string.Empty)))
                {
                    <MudMenuItem OnClick=@(e => ŜanĝiLingvon(l.Key))>@l.Value.Nomo</MudMenuItem>
                }
            </ChildContent>
        </MudMenu>
    </MudHidden>
</MudBreakpointProvider>

<MudThemeProvider 
    @ref="@_mudThemeProvider"
    Theme=Theme
    @bind-IsDarkMode=malhela/>
<MudDialogProvider/>
<MudSnackbarProvider/>